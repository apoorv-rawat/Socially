<header>
    
    <div id="container-h">

        <div id="app-name">
            <a href="/">
                <i class="fab fa-connectdevelop"></i> Socially
            </a>
        </div>

        <ul>
            <% if(locals.user) { %>
                
                <li>
                    <a href="/users/profile/<%= locals.user.id %>"><%= locals.user.name %></a>
                </li>

                <li>
                    <a href="/users/sign-out">Sign Out</a>
                </li>

            <% } else {%>

                <li>
                    <a href="/users/sign-in">Sign In</a>
                </li>

                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>

            <% } %>
        </ul>

    </div>
    
</header>